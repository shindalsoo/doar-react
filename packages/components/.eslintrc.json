{
    "extends": ["../.eslintrc-react.json"],
    "parserOptions": {
        "project": "tsconfig.json"
    },
    "overrides": [
        {
            "files": ["**/*.stories.*"],
            "rules": {
                "import/no-anonymous-default-export": "off"
            }
        },
        {
            "files": ["style.tsx"],
            "rules": {
                "no-unused-vars": ["warn", {"args": "none"}],
                "@typescript-eslint/no-unused-vars": "off"
            }
        }
    ]
}
